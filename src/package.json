{
  "name": "brimstone-valley",
  "version": "1.0.0",
  "description": "Brimstone Valley - A tactical hero battle game",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "vite",
    "build": "vite build",
    "build:web": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:linux": "vite build && electron-builder --linux",
    "test": "jest",
    "verify:costs": "node ../scripts/verify_no_spell_costs.mjs && node ../scripts/test_cost_authority.mjs"
  },
  "keywords": [
    "board game",
    "javascript",
    "online game",
    "tactical",
    "strategy"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^27.0.6",
    "vite": "^7.1.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  },
  "build": {
    "appId": "com.brimstonevalley.game",
    "productName": "Brimstone Valley",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/images/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/images/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
